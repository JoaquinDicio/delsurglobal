---
const { name, description, img, lang, website } = Astro.props;
---

<div
    class="flex flex-col lg:flex-row shadow-[0px_7px_10px_0px_rgba(0,0,0,0.2)] p-5 items-center rounded-[10px]"
>
    <img
        class="w-[150px] h-[150px] object-contain"
        src={img}
        alt={`Logo ${name}`}
    />
    <div class="pl-5">
        <h4 class="font-[800] text-[#808080]">{name}</h4>
        <p class="text-#808080 font-lighter mt-1">
            {description}
        </p>
        <a target="_blank" href={website} class="text-sm text-blue-500 mt-2"
            >{lang == "es" ? "Más información" : "Learn more"}</a
        >
    </div>
</div>
